<script>
  $(function() {
    $('#schedulers-list').dataTable({
      "ajax": "/admin/schedulers/list",
      "aoColumnDefs": [
        { 'bSortable': false, 'aTargets': [5] }
      ]
    });

    $('div.success, div.error').delay(10000).hide('slow');
  });
</script>

<%= link_to 'New', new_admin_scheduler_url, class: "button button-rounded" %>
<br/><br/>

<h1>Schedulers list</h1>
<br/>

<% if flash[:notice] %>
  <div class="success"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<table id="schedulers-list" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Report</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Periodicity</th>
      <th>Last Run</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Report</th>
      <th>Start At</th>
      <th>End At</th>
      <th>Periodicity</th>
      <th>Last Run</th>
      <th>Actions</th>
    </tr>
  </tfoot>
</table>
